    <arg name="x" value="0" />
    <arg name="y" value="0" />
    <arg name="z" value="1" />
    <arg name="Y" value="0.0" />
    <arg name="color/r" value="1.0" />
    <arg name="color/g" value="0.0" />
    <arg name="color/b" value="0.0" />
    <arg name="color/a" value="0.7" />
    <arg name="odom_topic" value="/ddk$(arg drone_id)/$(arg odom)" />
  </include>
