  <arg name="mav_type" default="dragon_ddk"/>
  <arg name="odom" default="/ground_truth/odom"/>
  <arg name="drone_id" value="0"/>

  <!--spaw robot-->
  <include file="$(find mav_simulator)/launch/single_tmux_spawn.xml">
    <arg name="mav_name" value="ddk$(arg drone_id)" />
